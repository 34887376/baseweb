@charset "UTF-8";

/* 1px border */
.bdb-1px{position: relative;
  @include bd-tb-1px(solid,#cbc9ce,bottom);
}

body{background: #efeff4;}
nav{z-index: 100;}
.body-bottom{padding-bottom: 54px;}
.body-white{background: #fff;}

.msg{width:100%;height:220px;background:url(i/home-bg.png) no-repeat #333333;background-size:100% 220px;
	color:#fff;text-align: center;
	img{width:100px;height:100px;margin-top:15px;border-radius:50px;}
	h3{font-size:1.7rem;margin-top:20px;}
	.sets{margin-top:7px;
		.txt{display: inline-block;margin:7px auto;padding:9px;font-size:1.3rem;color:#fff;margin-top:8px;background: #904040;border-radius: 6px;}
	}
}

.home-types{clear:both;background: #fff;width:100%;
	ul{height: 55px;line-height:55px;}
	li{position: relative;float: left;width:50%;height: 100%;text-align: center; color:#666666;font-size:1.3rem;
		.home-count-bg{width:16px;height:16px;position:absolute;top:10px;text-align: center;
			background: url(i/home-count-bg.png) no-repeat;background-size: 16px 16px;
			span{position: absolute;top: -19px;left:5px;color:#fff;font-size:1.2rem;}
		}
		label{font-size:1.7rem;}
		&.curr{
			label{color:#e54645;}
		}
		label:before{content: "";display: block;height:34px;width: 1px;position: absolute;background: #cccccc;left: -1px;top: 50%;margin-top: -17px;}
	}
} 

.menu{clear:both;background: #fff;width:100%;
	ul{height: 40px;line-height: 40px;font-size: 1.4rem;margin:0px 15px;}
	li{position: relative;float: left;height: 100%;text-align: center; color:#9a9a9a;padding:0px 15px;
		&.curr{
			label{color:#f15353;}
			label:after{position: absolute;content:"";width:56px;height:2px;background: #f24b48;bottom:.5px;left: 50%;margin-left:-28px;}
		}
		label{width: 100%;margin-left: -1px;}
	}
	.down-icon{margin:15px 16px 0px 0px;}
}

.same-interest{margin:7px 15px;font-size: 1.2rem;
	a{width:100%;display: block;padding:9px 0px;text-align: center;background: #fafafa;color: #cccccc;
		@include bd-all-1px(solid,#e0dfe2,0px);
	}
}

.list{margin-top:10px;
	.item{margin:0px 8px;padding:15px 0px;color:#2d2d2d;font-size: 1.2rem;
		.des{margin-left: 50px;margin-top:2px;}
		h3{font-size: 1.4rem;}
		.fr,.time{color:#999999;}
		.time{margin-top:5px;}
		.commet{margin-top: 15px;font-size: 1.2rem;line-height:1.4rem;}
		.fl{
			img{width:40px;height:40px;border-radius: 30px;margin-right: 10px;}
		}
		
		.reply{background: #e2e2e8;font-size: 1.2rem;line-height:1.4rem;border-radius: 3px;margin-top:15px;padding:7px 10px;color:#999999;
			.red{color: #e54645;}
		}
		.pics{margin-top:10px;overflow: hidden;
			img{width:30%;margin-right:5%;float: left;}
			img:last-child{margin-right:0px;}
		}
		.tags{margin-top:15px;font-size: 1.2rem;color:#999999;
			img{width:30px;height:30px;border-radius: 30px;border:1px solid #cdcdcd;margin-right:10px;}
			.fr{margin-top: 12px;
				>div{float: left;position:relative;margin-right: 10px;line-height: 14px;}
				i{margin:0px 7px 0px 10px;float: left;}
			}
			.love:after{content: "";display: block;height: 15px;width: 1px;position: absolute;background: #e2e2e2;left: -1px;top: 50%;margin-top: -8px;}

			.price{color:#f65857;font-size: 1.6rem;margin-right:10px;}
		}
	}
}
.list.pad7{padding:0px 7px;}

.reply-box{width:100%;position: fixed;bottom:0px;background: #e2e2e8;height:56px;padding:10px 14px;display: none;  z-index: 10;
	input{width:81%;border-radius: 3px;border: 1px solid #aaaaaa;height:35px;}
	a{width:45px;height:35px;line-height:35px;margin-left:10px;text-align: center;border-radius: 3px;background: #f65857;color:#fff;float: right;}
}

.preview{padding-top:50px;
	.img-box{margin:0px 17px;
		img{width:100%;}
	}
	.count-bottom{height:50px;line-height: 50px;background: #fff;color: #666666;font-size:1.8rem;
		position:fixed;bottom:0px;width:100%;text-align: right;padding-right:10px;
		.home-count-bg{width:16px;height:16px;position:absolute;top:17px;right:50px;text-align: center;
			background: url(i/home-count-bg.png) no-repeat;background-size: 16px 16px;
			span{position: absolute;top: -17px;left:5px;color:#fff;font-size:1.2rem;}
		}
	}
}

.footer{height:54px;background:#fff;border-top:1px solid #efeff0;position:fixed;bottom:0px;width:100%;max-width:640px;
	ul{width: 100%;
		li{width: 33.33%;float: left;text-align: center;height: 54px;}
	}
	a{color: #999999;width: 100%;height: 100%;display: block;padding-top:8px;
		i{margin-bottom: 3px;display: inline-block;}
	}
	.footer-cur{
		a{color: #f65857;}
		.together-icon{
			background: url(i/together-focus-icon.png) no-repeat;width:16px;height:19px;background-size: 16px 19px;
		}
		.interest-icon{
			background: url(i/interest-focus-icon.png) no-repeat;width:21px;height:19px;background-size: 21px 19px;
		}
		.me-icon{
			background: url(i/me-focus-icon.png) no-repeat;width:15px;height:19px;background-size: 15px 19px;
		}
	}
}

.together-icon{
	background: url(i/together-icon.png) no-repeat;width:16px;height:19px;background-size: 16px 19px;
}
.interest-icon{
	background: url(i/interest-icon.png) no-repeat;width:21px;height:19px;background-size: 21px 19px;
}
.me-icon{
	background: url(i/me-icon.png) no-repeat;width:15px;height:19px;background-size: 15px 19px;
}
.down-icon{
	background: url(i/down-icon.png) no-repeat;width:18px;height:9px;background-size: 18px 9px;
}
.reply-icon{
	background: url(i/reply-icon.png) no-repeat;width:14px;height:14px;background-size: 14px 14px;
}
.love-icon{
	background: url(i/love-icon.png) no-repeat;width:14px;height:14px;background-size: 14px 14px;
}
.together-code{
	background: url(i/together-code.png) no-repeat;width:14px;height:14px;background-size: 14px 14px;display: inline-block;
}
.together-edit-icon{
	background: url(i/together-edit-icon.png) no-repeat;width:14px;height:14px;background-size: 14px 14px;display: inline-block;
}
.popup-w{background:rgba(0,0,0,0.5);width:100%;height:100%;position:fixed;top:0px;z-index:100;display:none;}
.popup{width:100%;background:#ebebeb;position:fixed;bottom:-380px;z-index:110;
	>div{background: #fff;color:#666666;padding:16px 0px;font-size:1.8rem;text-align: center;}
	.title{background: transparent;color:#999999;padding:8px 0px;font-size:1.4rem;}
	.cancel{margin-top:8px;}
}

.settings{padding-top:26px;font-size: 1.7rem;width: 100%;
	>div{background: #fff;color:#666666;padding:17px 18px 17px 15px;}
	.logout{text-align: center;padding:17px 0px;
		a{color:#e54645;}
	}
	.fr{color:#cccccc;}
	.clear-cache,.logout{margin-top:10px;}
	.down-icon{float: right;margin-top: 4px;}
	a{color: #666666;width: 100%;height: 100%;display: block;}
}



@media screen and (min-width:375px){
	.home-types{
		ul{height: 65px;line-height:65px;}
		li{
			.home-count-bg{top:15px;
				span{top:-25px;}
			}
			label:before{height:44px;margin-top: -22px;}
		}
	}
}


